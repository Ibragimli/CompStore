@model MainSliderEditDto
@{
}

<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">MainSlider /</span>Edit</h4>

        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <h5 class="card-header">MainSlider</h5>
                    <div class="card-body">
                        <form asp-action="edit" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

                                @* Title *@
                                <div class="col-6">
                                    <div>
                                        <label asp-for="@Model.MainSlider.Title" class="form-label">Title</label>
                                        <input asp-for="@Model.MainSlider.Title" type="text" class="form-control" placeholder=".........">
                                        <span asp-validation-for="@Model.MainSlider.Title" class="text-danger"></span>
                                    </div>
                                    <input asp-for="@Model.MainSlider.Id" value="@Model.MainSlider.Id" type="hidden">
                                </div>

                                @* Description *@
                                <div class="col-6">
                                    <div>
                                        <label asp-for="@Model.MainSlider.Description" class="form-label">Description</label>
                                        <input asp-for="@Model.MainSlider.Description" type="text" class="form-control" placeholder=".........">
                                        <span asp-validation-for="@Model.MainSlider.Description" class="text-danger"></span>
                                    </div>
                                    <input asp-for="@Model.MainSlider.Id" value="@Model.MainSlider.Id" type="hidden">
                                </div>

                                @* Image *@

                                <div class="col-6">
                                    <label asp-for="MainSlider.ImageFile" class="form-label">Şəkil</label>
                                    <div class="input-group">
                                        <input asp-for="MainSlider.ImageFile" type="file" class="form-control">
                                        <span asp-validation-for="MainSlider.ImageFile" class="text-danger"></span>
                                    </div>
                                    <div style="margin-top:10px;">
                                        @if (Model.MainSlider.Image != null)
                                        {
                                            <img style="width:200px; height:180px;" src="~/uploads/MainSliders/@Model.MainSlider.Image" />
                                        }
                                    </div>

                                </div>



                                <div class="d-flex justify-content-end col-12">
                                    <a asp-action="index" asp-controller="MainSlider" class="btn btn-outline-warning mt-2">Geriyə qayıtmaq</a>
                                    <button type="submit" class="ms-3 btn btn-outline-primary mt-2">Yaratmaq</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content-backdrop fade"></div>
</div>

@section Scripts{
}
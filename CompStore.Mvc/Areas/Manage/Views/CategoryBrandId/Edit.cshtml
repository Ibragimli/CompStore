@model CategoryBrandIdEditDto
@{
}
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">CategoryBrandId /</span>Edit</h4>

        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <h5 class="card-header">CategoryBrandId</h5>
                    <div class="card-body">
                        <form asp-action="edit" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                                @* Category *@

                                <div class=" col-6">
                                    <input type="hidden" asp-for="CategoryBrandId.Id" value="@Model.CategoryBrandId.Id" />
                                    <label asp-for="CategoryBrandId.CategoryId" class="form-label">Kategori</label>
                                    <select asp-for="CategoryBrandId.CategoryId" id="categorySelect" class="form-select">
                                        <option selected>Hamısı</option>
                                        @foreach (var item in Model.Categories)
                                        {
                                            <option data-id="@item.Id" id="categoryOption" value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryBrandId.CategoryId" class="text-danger"></span>
                                </div>

                                @* Brand *@
                                <div class="col-6">
                                    <label asp-for="CategoryBrandId.BrandId" class="form-label">Brand</label>
                                    <select asp-for="CategoryBrandId.BrandId" id="categorySelect" class="form-select">
                                        <option selected>Hamısı</option>
                                        @foreach (var item in Model.Brands)
                                        {
                                            <option data-id="@item.Id" id="categoryOption" value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryBrandId.BrandId" class="text-danger"></span>
                                </div>


                                <div class="d-flex justify-content-end col-12">
                                    <a asp-action="index" asp-controller="CategoryBrandId" class="btn btn-outline-warning mt-2">Geriyə qayıtmaq</a>
                                    <button type="submit" class="ms-3 btn btn-outline-primary mt-2">Yaratmaq</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content-backdrop fade"></div>
</div>

@section Scripts{
}
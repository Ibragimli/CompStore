@model MainSpecialBoxCreateDto
@{
}

<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">MainSpecialBox /</span>Create</h4>

        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <h5 class="card-header">MainSpecialBox Create</h5>
                    <div class="card-body">
                        <form asp-action="create" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                                @* Title *@
                                <div class="col-6">
                                    <label style=" font-size: 18px; " asp-for="@Model.MainSpecialBox.Title" class="form-label">Title</label>
                                    <input asp-for="@Model.MainSpecialBox.Title" type="text" class="form-control" placeholder=".........">
                                    <span asp-validation-for="@Model.MainSpecialBox.Title" class="text-danger"></span>
                                </div>
                                @* IsFirstBox *@
                                <div style=" display: flex; align-items: center; " class="col-6">
                                    <label style="margin-bottom: 0; font-size: 18px;" asp-for="@Model.MainSpecialBox.IsFirstBox" class="form-label">Üst box</label>
                                    <input style="font-size: 18px;margin-top: 0;margin-left: 10px;" asp-for="@Model.MainSpecialBox.IsFirstBox" class="form-check-input" placeholder=".........">
                                    <span asp-validation-for="@Model.MainSpecialBox.IsFirstBox" class="text-danger"></span>
                                </div>

                                @* Image *@
                                <div style="margin-top:5px;" class="col-6">
                                    <label style=" font-size: 18px; " asp-for="@Model.MainSpecialBox.ImageFile" class="form-label">Şəkil</label>
                                    <input asp-for="@Model.MainSpecialBox.ImageFile" class="form-control">
                                    <span asp-validation-for="@Model.MainSpecialBox.ImageFile" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-end col-12">
                                    <a asp-action="index" asp-controller="MainSpecialBox" class="btn btn-outline-warning mt-2">Geriyə qayıtmaq</a>
                                    <button type="submit" class="ms-3 btn btn-outline-primary mt-2">Yaratmaq</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content-backdrop fade"></div>
</div>

@section Scripts{
}
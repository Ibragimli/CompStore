@model ScreenDiagonalEditDto
@{
}

<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Screen Diagonal  /</span>Edit</h4>

        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <h5 class="card-header">Screen Diagonal</h5>
                    <div class="card-body">
                        <form asp-action="edit" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

                                @* Mhz *@
                                <div class="col-6">
                                    <div>
                                        <label asp-for="@Model.Diagonal" class="form-label">Model</label>
                                        <input asp-for="@Model.Diagonal" type="text" class="form-control" placeholder=".........">
                                        <span asp-validation-for="@Model.Diagonal" class="text-danger"></span>
                                    </div>
                                    <input asp-for="@Model.Id" value="@Model.Id" type="hidden">
                                </div>

                                <div class="d-flex justify-content-end col-12">
                                    <a asp-action="index" asp-controller="ScreenDiagonal" class="btn btn-outline-warning mt-2">Geriyə qayıtmaq</a>
                                    <button type="submit" class="ms-3 btn btn-outline-primary mt-2">Yaratmaq</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content-backdrop fade"></div>
</div>


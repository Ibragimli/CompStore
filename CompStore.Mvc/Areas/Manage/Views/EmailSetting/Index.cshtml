@model EmailSettingIndexViewModel
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Email Setting /</span> Index</h4>


        <!-- Bordered Table -->
        <div class="card">
            <div class="card-body">
                @* Pagination *@
                <div class="basic-form">
                    <form method="post" asp-action="edit">

                        @foreach (var item in Model.PagenatedItems)
                        {

                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="mb-3 col-md-6">
                                    <label asp-for="@item.SmtpEmail" class="form-label">Email</label>
                                    <input asp-for="@item.SmtpEmail" type="email" class="form-control" placeholder="........">
                                    <span asp-validation-for="@item.SmtpEmail" class="text-danger"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label asp-for="@item.SmtpPassword" class="form-label">Password</label>
                                    <input asp-for="@item.SmtpPassword" type="text" class="form-control" placeholder="........">
                                    <span asp-validation-for="@item.SmtpPassword" class="text-danger"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label asp-for="@item.SmtpHost" class="form-label">SmtpHost</label>
                                    <input asp-for="@item.SmtpHost" type="text" class="form-control" placeholder="........">
                                    <span asp-validation-for="@item.SmtpHost" class="text-danger"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label asp-for="@item.SmtpPort" class="form-label">Port</label>
                                    <input asp-for="@item.SmtpPort" type="text" class="form-control" placeholder="........">
                                    <span asp-validation-for="@item.SmtpPort" class="text-danger"></span>
                                </div>
                                <input asp-for="@item.Id" value="@item.Id" type="hidden" />
                            </div>
                        }
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>

                    </form>
                </div>
            </div>
            <br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />

        </div>
    </div>
    <!--/ Bordered Table -->
</div>
<!-- / Content -->

